    "questions": [
        {
            "id": "thermo_q1",
            "topic_id": 23,
            "topic_name": "Basic Concepts and Definitions",
            "question_text": "A system that exchanges both mass and energy with surroundings is called:",
            "question_type": "mcq",
            "options": [
                "Closed system",
                "Open system",
                "Isolated system",
                "Adiabatic system"
            ],
            "correct_answer": "Open system",
            "explanation": "Open systems (control volumes) allow both mass and energy to cross the boundary.",
            "difficulty": "easy",
            "source_citation": "Thermodynamics Textbook, Chapter 1"
        },
        {
            "id": "thermo_q2",
            "topic_id": 24,
            "topic_name": "Work and Heat",
            "question_text": "Work done in a constant pressure process is:",
            "question_type": "mcq",
            "options": [
                "W = PΔV",
                "W = VΔP",
                "W = ∫VdP",
                "W = 0"
            ],
            "correct_answer": "W = PΔV",
            "explanation": "At constant pressure, boundary work W = P(V2 - V1) = PΔV.",
            "difficulty": "medium",
            "source_citation": "Thermodynamics Textbook, Chapter 2"
        },
        {
            "id": "thermo_q3",
            "topic_id": 25,
            "topic_name": "First Law of Thermodynamics",
            "question_text": "For a closed system undergoing a cycle, the first law states:",
            "question_type": "mcq",
            "options": [
                "ΔU = Q",
                "ΔU = W",
                "Q = W",
                "ΔU = Q - W"
            ],
            "correct_answer": "Q = W",
            "explanation": "For a complete cycle, ΔU = 0, so Q_net = W_net from the first law.",
            "difficulty": "medium",
            "source_citation": "Thermodynamics Textbook, Chapter 3"
        },
        {
            "id": "thermo_q4",
            "topic_id": 26,
            "topic_name": "Properties of Pure Substances",
            "question_text": "The quality of a two-phase liquid-vapor mixture represents:",
            "question_type": "mcq",
            "options": [
                "Pressure ratio",
                "Temperature ratio",
                "Mass fraction of vapor",
                "Volume fraction of liquid"
            ],
            "correct_answer": "Mass fraction of vapor",
            "explanation": "Quality x = m_vapor / m_total, representing the mass fraction of vapor in the mixture.",
            "difficulty": "medium",
            "source_citation": "Thermodynamics Textbook, Chapter 4"
        },
        {
            "id": "thermo_q5",
            "topic_id": 27,
            "topic_name": "Second Law of Thermodynamics",
            "question_text": "The Kelvin-Planck statement says it is impossible to:",
            "question_type": "mcq",
            "options": [
                "Transfer heat from cold to hot body",
                "Convert heat completely to work in a cycle",
                "Create energy",
                "Have 100% efficient refrigerator"
            ],
            "correct_answer": "Convert heat completely to work in a cycle",
            "explanation": "No heat engine operating in a cycle can convert all heat input to work (some must be rejected).",
            "difficulty": "medium",
            "source_citation": "Thermodynamics Textbook, Chapter 5"
        },
        {
            "id": "thermo_q6",
            "topic_id": 28,
            "topic_name": "Entropy",
            "question_text": "For a reversible adiabatic process, entropy change is:",
            "question_type": "mcq",
            "options": [
                "Positive",
                "Negative",
                "Zero",
                "Undefined"
            ],
            "correct_answer": "Zero",
            "explanation": "Reversible adiabatic = isentropic (constant entropy). ΔS = 0.",
            "difficulty": "easy",
            "source_citation": "Thermodynamics Textbook, Chapter 6"
        },
        {
            "id": "thermo_q7",
            "topic_id": 29,
            "topic_name": "Carnot Cycle",
            "question_text": "A Carnot engine operates between 500K and 300K. Its efficiency is:",
            "question_type": "mcq",
            "options": [
                "20%",
                "40%",
                "60%",
                "80%"
            ],
            "correct_answer": "40%",
            "explanation": "Carnot efficiency η = 1 - TL/TH = 1 - 300/500 = 0.4 = 40%.",
            "difficulty": "medium",
            "source_citation": "Thermodynamics Textbook, Chapter 7"
        },
        {
            "id": "thermo_q8",
            "topic_id": 30,
            "topic_name": "Gas Power Cycles",
            "question_text": "In an Otto cycle, heat is added during:",
            "question_type": "mcq",
            "options": [
                "Constant pressure process",
                "Constant volume process",
                "Isentropic process",
                "Isothermal process"
            ],
            "correct_answer": "Constant volume process",
            "explanation": "Otto cycle (spark ignition engine) has constant volume heat addition (combustion).",
            "difficulty": "easy",
            "source_citation": "Thermodynamics Textbook, Chapter 8"
        },
        {
            "id": "thermo_q9",
            "topic_id": 32,
            "topic_name": "Refrigeration Cycles",
            "question_text": "The COP of a refrigerator is defined as:",
            "question_type": "mcq",
            "options": [
                "W_net/Q_L",
                "Q_L/W_net",
                "Q_H/W_net",
                "W_net/Q_H"
            ],
            "correct_answer": "Q_L/W_net",
            "explanation": "COP_R = Desired effect / Work input = Q_L / W_net (heat removed from cold space per unit work).",
            "difficulty": "medium",
            "source_citation": "Thermodynamics Textbook, Chapter 10"
        }
    ]
